<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/addition"
        tools:context=".addition.AddingActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa produktu"
            android:layout_marginTop="100dp"
            android:id="@+id/add_name"
            android:textColor="@color/colorAccent"
            android:textStyle="bold|italic"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ilość"
            android:layout_centerInParent="true"
            android:id="@+id/add_amount"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/add_name"
            android:textStyle="bold|italic"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cena za sztukę"
            android:layout_centerInParent="true"
            android:id="@+id/add_price"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/add_amount"
            android:textStyle="bold|italic"
            android:layout_marginTop="20dp"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_price"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DODAJ"
                android:id="@+id/add_button"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOLEJNY PRODUKT"
                android:id="@+id/add_next_btn"
                android:layout_toRightOf="@+id/add_button"
                android:layout_marginLeft="15dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WSTECZ"
                android:id="@+id/add_end"
                android:layout_toRightOf="@+id/add_next_btn"
                android:layout_marginLeft="15dp"/>

    </RelativeLayout>
</RelativeLayout>